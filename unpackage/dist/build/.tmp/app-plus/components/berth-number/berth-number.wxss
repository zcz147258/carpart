.berth {
  padding: 15rpx 20rpx;
}
.berth > .berth-input {
  border: 1rpx solid #dbd6e8;
  background: #f0e9ff;
  width: 120rpx;
  height: 100rpx;
  font-size: 48rpx;
}
.berth > .berth-input:nth-child(1) {
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}
.berth > .berth-input:nth-last-child(1) {
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}
